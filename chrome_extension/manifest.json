{
    "manifest_version": 3,
    "name": "YouTube Language Metrics",
    "version": "0.0.1",
    "description": "Lanugage metrics from YouTube videos",
    "permissions": [
      "tabs", "scripting", "activeTab"
    ],
    "icons": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_title": "CLICK",   
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icons/icon16.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
        }
    },
  "background": {
    "service_worker": "background.js"
  }
}